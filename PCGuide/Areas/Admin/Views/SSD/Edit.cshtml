@model SSDViewModel

@{
    string strTitle = "Редактировать SSD";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@ViewBag.Title</h2>
    <div>
        <form asp-area="Admin" asp-controller="SSD" asp-action="Edit" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" />
                <span asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Company"></label>
                <select asp-for="Company" asp-items="@Html.GetEnumSelectList<Company>()"></select>
            </div>
            <div>
                <label asp-for="MemoryCapacity"></label>
                <input asp-for="MemoryCapacity" type="text" />
                <span asp-validation-for="MemoryCapacity"></span>
            </div>
            <div>
                <label asp-for="WriteSpeed"></label>
                <input asp-for="WriteSpeed" type="text" />
                <span asp-validation-for="WriteSpeed"></span>
            </div>
            <div>
                <label asp-for="ReadSpeed"></label>
                <input asp-for="ReadSpeed" type="text" />
                <span asp-validation-for="ReadSpeed"></span>
            </div>
            <div>
                <label asp-for="Image"></label>
                <input asp-for="Image" type="file" />
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model?.ImageData ?? Array.Empty<byte>())" >
            </div>

            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>