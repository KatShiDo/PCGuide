@model NewsViewModel

@{
    string strTitle = "Редактировать новость";
    ViewBag.Title = strTitle;
    string imgSrc = "";
    if (Model != null)
    {
        var base64 = Convert.ToBase64String(Model.ImageData);
        imgSrc = String.Format("data:image/gif;base64,{0}", base64);
    }
}

<div>
    <h2>@ViewBag.Title</h2>
    <div>
        <form asp-area="Admin" asp-controller="News" asp-action="Edit" method="post" enctype="multipart/form-data">
            <!--<input asp-for="Id" type="hidden" />-->

            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" />
                <span asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Description"></label>
                <textarea asp-for="Description"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <div>
                <label asp-for="TagsString"></label>
                <input asp-for="TagsString" type="text" />
                <span asp-validation-for="TagsString"></span>
            </div>
            <div>
                <label asp-for="Image"></label>
                <input asp-for="Image" type="file" />
                <img src="@imgSrc" />
            </div>

            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>