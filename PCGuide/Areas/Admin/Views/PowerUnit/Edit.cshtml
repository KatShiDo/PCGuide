@model PowerUnitViewModel

@{
    string strTitle = "Редактировать блок питания";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@ViewBag.Title</h2>
    <div>
        <form asp-area="Admin" asp-controller="PowerUnit" asp-action="Edit" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" />
                <span asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Company"></label>
                <select asp-for="Company" asp-items="@Html.GetEnumSelectList<Company>()"></select>
            </div>
            <div>
                <label asp-for="Power"></label>
                <input asp-for="Power" type="text" />
                <span asp-validation-for="Power"></span>
            </div>
            <div>
                <label asp-for="Image"></label>
                <input asp-for="Image" type="file" />
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model?.ImageData ?? Array.Empty<byte>())" >
            </div>

            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>