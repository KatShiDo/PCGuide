@model GPUViewModel

@{
    string strTitle = "Редактировать видеокарту";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@ViewBag.Title</h2>
    <div>
        <form asp-area="Admin" asp-controller="GPU" asp-action="Edit" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" />
                <span asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Company"></label>
                <select asp-for="Company" asp-items="@Html.GetEnumSelectList<Company>()"></select>
            </div>
            <div>
                <label asp-for="MemoryCapacity"></label>
                <input asp-for="MemoryCapacity" type="text" />
                <span asp-validation-for="MemoryCapacity"></span>
            </div>
            <div>
                <label asp-for="MemoryType"></label>
                <select asp-for="MemoryType" asp-items="@Html.GetEnumSelectList<MemoryType>()"></select>
            </div>
            <div>
                <label asp-for="TechnicalProcess"></label>
                <select asp-for="TechnicalProcess" asp-items="@Html.GetEnumSelectList<TechnicalProcess>()"></select>
            </div>
            <div>
                <label asp-for="ClockSpeed"></label>
                <input asp-for="ClockSpeed" type="text" />
                <span asp-validation-for="ClockSpeed"></span>
            </div>
            <div>
                <label asp-for="TDP"></label>
                <input asp-for="TDP" type="text" />
                <span asp-validation-for="TDP"></span>
            </div>
            <div>
                <label asp-for="Length"></label>
                <input asp-for="Length" type="text" />
                <span asp-validation-for="Length"></span>
            </div>
            <div>
                <label asp-for="Image"></label>
                <input asp-for="Image" type="file" />
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model?.ImageData ?? Array.Empty<byte>())" >
            </div>

            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>