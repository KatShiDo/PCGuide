@model MotherboardViewModel

@{
    string strTitle = "Редактировать материнскую плату";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@ViewBag.Title</h2>
    <div>
        <form asp-area="Admin" asp-controller="Motherboard" asp-action="Edit" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" />
                <span asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Company"></label>
                <select asp-for="Company" asp-items="@Html.GetEnumSelectList<Company>()"></select>
            </div>
            <div>
                <label asp-for="Socket"></label>
                <select asp-for="Socket" asp-items="@Html.GetEnumSelectList<Socket>()"></select>
            </div>
            <div>
                <label asp-for="Chipset"></label>
                <select asp-for="Chipset" asp-items="@Html.GetEnumSelectList<Chipset>()"></select>
            </div>
            <div>
                <label asp-for="MemoryType"></label>
                <select asp-for="MemoryType" asp-items="@Html.GetEnumSelectList<MemoryType>()"></select>
            </div>
            <div>
                <label asp-for="MotherboardType"></label>
                <select asp-for="MotherboardType" asp-items="@Html.GetEnumSelectList<MotherboardType>()"></select>
            </div>
            <div>
                <label asp-for="Image"></label>
                <input asp-for="Image" type="file" />
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model?.ImageData ?? Array.Empty<byte>())" >
            </div>

            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>