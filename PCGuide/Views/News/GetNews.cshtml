@model IEnumerable<News>

<div>
    @Html.Raw(ViewBag.Text)
</div>

@if (Model != null)
{
    @foreach (News news in Model)
    {
        <div class="blog-container">
            <div class="blog-header">
                <div class="blog-cover">
                    <img src="data:image;base64,@System.Convert.ToBase64String(news.Image)" alt=""/>
                </div>
            </div>
            <div class="blog-body">
                <div class="blog-title">
                    <h1>
                        <a asp-area="" asp-controller="News" asp-action="GetNewsById" asp-route-id="@news.Id">@news.Name</a>
                    </h1>
                </div>
                <div class="blog-text">
                    <p>@news.Description</p>
                </div>
                <div class="blog-tags">
                    <ul>
                        @foreach (string tag in news.Tags.Split(" ").ToList())
                        {
                            <li>
                                <a asp-area="" asp-controller="News" asp-action="GetNewsByTag" asp-route-tag="@tag">@tag</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="blog-footer">
                <ul>
                    <li class="published-date">@news.DateCreate</li>
                </ul>
            </div>
        </div>
    }

}